// Prisma schema for BeyondChats

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PDF {
  id          String   @id @default(cuid())
  title       String
  url         String
  createdAt   DateTime @default(now())
  chunks      Chunk[]
  quizzes     Quiz[]
}

model Chunk {
  id         String   @id @default(cuid())
  content    String
  pageNum    Int
  embedding  Unsupported("vector(1536)")? // Optional until embeddings generated
  pdfId      String
  pdf        PDF      @relation(fields: [pdfId], references: [id])
}

model Quiz {
  id          String   @id @default(cuid())
  pdfId       String
  pdf         PDF      @relation(fields: [pdfId], references: [id])
  question    String
  options     String[]
  correct     String
  explanation String?
  createdAt   DateTime @default(now())
}
